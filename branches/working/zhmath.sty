\def\zhmath@zhfont@text#1{{\hbox{\zhfont\mathcjksizeb     #1\relax}}}
\def\zhmath@zhfont@scrp#1{{\hbox{\zhfont\mathcjksizec     #1\relax}}}
\def\zhmath@zhfont@subs#1{{\hbox{\zhfont\mathcjksized     #1\relax}}}

\zhmath@setactivemathchar{"2E80}{"9FFF}{\zhmath@zhfont@disp}%
  {\zhmath@zhfont@text}{\zhmath@zhfont@scrp}{\zhmath@zhfont@subs}
\fi
